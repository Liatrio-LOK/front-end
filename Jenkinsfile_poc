              checkForTriggeredDeployments: 'true',
              verbose: 'true'
          )
          currentBuild.result = "SUCCESS"
        }
        catch (e) {
          currentBuild.result = "FAILED"
        }
    }
    stage('Verify Build') {
      if (currentBuild.result == "FAILED") {
        sh 'echo failed'
      } else {
        sh 'echo success'
      }
